    <table class="table table-bordered">
        <tr>
            <th>Ürün Resmi</th>
            <th>UrunId</th>
            <th>Kategori</th>
            <th>UrunKodu</th>
            <th>Markası</th>
            <th>Açıklam detay</th>
            <th>Garanti Süresi</th>
            <th>Stock Adeti</th>
            <th>Fiyat</th>



        </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td><img src="data:image/png;base64,@Convert.ToBase64String(item.Resim)" class="img-fluid rounded" height="100px" width="100px"></td>
                <td>@item.UrunBilgiId</td>
                <td>@item.Kategori</td>
                <td>@item.UrunKodu</td>
                <td>@item.Markası</td>
                <td>@item.AcıklamaDetay</td>
                <td>@item.GarantiSuresi</td>
                <td>@item.Stok</td>
                <td>@item.Fiyat</td>


            </tr>
            }
    </table>


</body>
