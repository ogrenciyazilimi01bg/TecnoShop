@model TecnoShop.Models.SiparisBilgileri

@{
    Layout = null;
}
@using Microsoft.AspNetCore.Http
@{
    var kullaniciAdi = Context.Session.GetString("KullaniciAdi");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Siparis Bilgi Sayfası Sayfası</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/Odeme.css">

</head>
<body>
    <h1>Müşteri: @kullaniciAdi</h1>
    @using (Html.BeginForm("SiparisBil", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <fieldset>
            <div class="container">
                <h2>Siparis Bilgi Sayfası</h2>

                <div class="card">
                    <label for="MusteriId">MusteriId</label>
                    <input type="text" id="MusteriId" name="MusteriId" class="form-control" required>
                    <label for="Sehir">Şehir:</label>
                    <input type="text" id="Sehir" name="Sehir" class="form-control" required>

                    <div class="col">
                        <label for="EvAdresi">Ev Adresi:</label>
                        <input type="text" id="EvAdresi" name="EvAdresi" class="form-control" required">
                    </div>

                   
                </div>
                <button type="submit" class="btn btn-primary">Ödemeye geç</button>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        </fieldset>



    }
    
</body>
</html>