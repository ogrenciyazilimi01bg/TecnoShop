@using TecnoShop;
@model UrunBilgi
@using Microsoft.AspNetCore.Http
@{
    var kullaniciAdi = Context.Session.GetString("KullaniciAdi");
}

@{
    ViewData["Title"] = "TecnoShop";
}

<!DOCHTYPE html>
<html>
<head>
    <meta name="" content-type" content="text/html charset=utf-8" />
    <meta name="author" content="Begüm Geçer, begum.gecer@pru.edu.tr" />
    <meta name="designer" content="Begüm Geçer, begum.gecer@pru.edu.tr" />
    <meta name="language" content="Turkish" />
    <meta name="description" content="TecnoShop: Sadece Bir Tık Uzağında Teknoloji Harikaları.Sitemizde her bütçeye uygun ve evinize almak istediğniz her türlü elektronik  eşya ürünü bulunur." />
    <meta name="keywords" content="Beyaz eşya,Teknolojik aletler ,uygun fiyat,müşteri memnuniyeti garantili,Buzdolabı,,Çamaşır makinesi,Fırın,Ocak,Küçük ev aletleri,Kahve makinesi,Televizyon,Telefon,elektronik alet yedek" />
    <meta name="author" content="Begüm Geçer, begum.gecer@pru.edu.tr" />
    <meta name="abstract" content="TecnoShop:Yaşamınıza dokunan teknoloji ile kolaylığı keşfedin.Aradığınız her türlü  yaşamınızı kolaylaştıracak beyaz eşyayı burada bulabilirsiniz.Tüm bütçelere uygun elektronik eşyalara bu sayfadan ulaşabilirsiniz." />
    <meta name="copyright" content="&#169; TecnoShop.com 2023 Tüm Hakları Saklıdır." />
    <meta name="designer" content="Begüm Geçer. Web Designer." />
    <meta http-equiv="Resource-Type" content="document">
    <meta name="robots" content="all">
    <link rel="stylesheet" type="text/css" href="/css/site.css">
    <base href="/Home/UrunDetay" target="_parent">
    <link rel="stylesheet" type="text/css" href="/css/site.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/UrunDetay.css">

</head>
<body>
    <h1>Müşteri: @kullaniciAdi</h1>
    <table style="width:100%">
        <tr class="navbar">
            <th>
                <a href="AnasayfaMusteri">Tüm ürünler</a>


            </th>
            <th><a href="Buzdolabi">Buzdolabı</a></th>
            <th><a href="CamasirMakinesi">Çamaşır makinesi</a></th>
            <th><a href="Firin">Fırın</a></th>
            <th><a href="KahveMakinesi">Kahve makinesi</a></th>
            <th><a href="Ocak">Ocak</a></th>
            <th><a href="Telefon">Telefon</a></th>
            <th><a href="Televizyon">Televizyon</a></th>


        </tr>
    </table>

    <div class="row">
        <div class="col-md-6">
            <h1>@Model.Markası@Model.Kategori</h1>
            <img src="data:image/png;base64,@Convert.ToBase64String(Model.Resim)" class="img-fluid rounded">


        </div>
        <div class="col-md-6">
            <div class="row mt-1">
                <div class="col-md-12">

                    <h1><br /><br /><br />@Model.Markası,@Model.Kategori UrunKodu:@Model.UrunKodu</h1>
                    <h3>@Model.AcıklamaDetay</h3>
                    <h3>Garanti Süresi:@Model.GarantiSuresi yıl</h3> 
                    <span class="badge badge-success">Stok:@Model.Stok</span>

                    

                </div>

            </div>
            <div class="row mt-1">
                <div class="col-md-12">
                    <h4 id="product-price">@Model.Fiyat&#8378;</h4>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-md-12">
                        @if (Model.Stok > 0)
                        {
                        <button class="btn btn-success" id="addToCartBtn" onclick="addToCart()">
                            <span class="material-symbols-outlined">
                                add_shopping_cart
                            </span>
                            Sepete Ekle
                        </button>
                        }
                        else
                        {
                        <button class="btn btn-danger" disabled>
                            Tükendi
                        </button>
                        }
                </div>
            </div>

        </div>
        <div class="row">
            
            <div class="row mt-3">
                <div class="col-md-12">
                    <div style="background-color:#e3f2fd">
                        <div class="bd-example">
                            <ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="false" tabindex="-1">Ürün Açıklaması</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false" tabindex="-1">Teknik özellikler</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-tab-pane" type="button" role="tab" aria-controls="contact-tab-pane" aria-selected="true">Teslimat ve iade koşulları</button>
                                </li>
                                

                            </ul>
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
                                    <p>@Model.AcıklamaDetay</p>
                                </div>
                                <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
                                    <p>@Model.TeknikOzellikler</p>
                                </div>
                                <div class="tab-pane fade active show" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">
                                    <p>@Model.KargoBilgisi</p>
                                    <p>@Model.IadeBilgisi</p>
                                </div>
                                

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script>
        function addToCart() {
            var productData = {
                marka: '@Model.Markası',
                resim: '@Model.Resim',
                kategori: '@Model.Kategori',
                fiyat: '@Model.Fiyat',
                // Diğer gerekli bilgileri ekle
            };

            // localStorage üzerinde ürün bilgilerini sakla
            var cartItems = JSON.parse(localStorage.getItem('cartItems')) || [];
            cartItems.push(productData);
            localStorage.setItem('cartItems', JSON.stringify(cartItems));
            alert('Ürün sepetinize eklenmiştir.');
        }
    </script>
    <div class="row mt-3">
        <div class="col-md-12">
            <form method="post" action="/Home/YorumEkle">
                <div class="form-group">
                    <label for="yorum">Urun ile ilgili yorum:</label>
                    <textarea class="form-control" id="yorum" name="yorum" required></textarea>
                </div>
                <input type="hidden" name="urunId" value="@Model.UrunBilgiId" />
                <button type="submit" class="btn btn-primary">Yorum Yap</button>
            </form>
        </div>
    </div>

    




</body>
</html>

